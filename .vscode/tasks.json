{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "perl",
    "isShellCommand": true,
    "tasks": [
        {
            "taskName": "watch",
            "suppressTaskName": true,
            "isWatching": true,
            "args": [
                "./.vscode/bin/watcher.pl",
                "./"
            ]
        },
        {
            "taskName": "setup-extention",
            "suppressTaskName": true,
            "args": [
                "./.vscode/bin/setup.pl"
            ]
        }
    ],
    "showOutput": "always"
}